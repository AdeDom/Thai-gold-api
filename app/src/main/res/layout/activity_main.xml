<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <GridLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="3"
        android:rowCount="5">

        <ImageView
            android:layout_width="@dimen/img_logo"
            android:layout_height="@dimen/img_logo"
            android:layout_columnSpan="3"
            android:layout_gravity="center"
            android:src="@drawable/ic_gold" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/TextView"
            android:layout_columnSpan="3"
            android:text="@string/date" />

        <TextView
            android:id="@+id/tv_update_time"
            style="@style/TextView"
            android:layout_columnSpan="3"
            android:text="@string/time" />

        <TextView
            style="@style/TextView"
            android:layout_columnWeight="33" />

        <TextView
            style="@style/TextView"
            android:text="@string/buy" />

        <TextView
            style="@style/TextView"
            android:text="@string/sell" />

        <TextView
            style="@style/TextView"
            android:text="@string/gold" />

        <TextView
            android:id="@+id/tv_gold_buy"
            style="@style/TextView"
            android:text="@string/price" />

        <TextView
            android:id="@+id/tv_gold_sell"
            style="@style/TextView"
            android:text="@string/price" />

        <TextView
            style="@style/TextView"
            android:text="@string/gold_bar" />

        <TextView
            android:id="@+id/tv_gold_bar_buy"
            style="@style/TextView"
            android:text="@string/price" />

        <TextView
            android:id="@+id/tv_gold_bar_sell"
            style="@style/TextView"
            android:text="@string/price" />

    </GridLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

</RelativeLayout>